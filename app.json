{
  "expo": {
    "name": "ZapSplit",
    "slug": "zapsplit",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "scheme": "zapsplit",
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#FFFFFF"
    },
    "ios": {
      "supportsTablet": false,
      "bundleIdentifier": "com.yourname.zapsplit",
      "buildNumber": "1.0.0",
      "associatedDomains": [
        "applinks:zapsplit.com.au",
        "applinks:www.zapsplit.com.au"
      ],
      "infoPlist": {
        "NSCameraUsageDescription": "ZapSplit needs camera access to scan receipts and automatically split bills.",
        "NSPhotoLibraryUsageDescription": "ZapSplit needs access to your photos to upload receipt images.",
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#FFFFFF"
      },
      "package": "com.yourname.zapsplit",
      "versionCode": 1,
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.RECORD_AUDIO"
      ],
      "targetSdkVersion": 35,
      "compileSdkVersion": 35,
      "intentFilters": [
        {
          "action": "VIEW",
          "autoVerify": true,
          "data": [
            {
              "scheme": "https",
              "host": "zapsplit.com.au",
              "pathPrefix": "/pay"
            },
            {
              "scheme": "https",
              "host": "www.zapsplit.com.au",
              "pathPrefix": "/pay"
            }
          ],
          "category": [
            "BROWSABLE",
            "DEFAULT"
          ]
        }
      ]
    },
    "plugins": [
      [
        "expo-camera",
        {
          "cameraPermission": "Allow ZapSplit to access your camera to scan receipts."
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Allow ZapSplit to access your photos to upload receipts."
        }
      ],
      [
        "@stripe/stripe-react-native",
        {
          "merchantIdentifier": "merchant.com.zapsplit.app",
          "enableGooglePay": true
        }
      ],
      "expo-splash-screen",
      "expo-apple-authentication",
      [
        "@react-native-google-signin/google-signin",
        {
          "iosUrlScheme": "com.googleusercontent.apps.721298532681-23u9e6stdpjjf0v3do9fcqraj96ekca8"
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "b353cf00-111a-455b-9cff-a5622fd4cbf4"
      }
    }
  }
}
